@model Job


@{ 
    ViewData["Title"] = "Add new job";
}


<section class="col-10 col-sm-9 col-md-8 col-lg-6 mx-auto">
    <form asp-controller="Admin" asp-action="CreateJob" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="JobCategory"></label>
            <select asp-for="JobCategory" class="form-control" asp-items="Html.GetEnumSelectList<JobCategory>()"></select>
            <span asp-validation-for="JobCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TimeUploaded"></label>
            <input asp-for="TimeUploaded" class="form-control" type="date" />
            <span asp-validation-for="TimeUploaded" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary btn-block">Save job</button>
        </div>
    </form>
</section>
