@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit role";
}


<section class="col-10 col-sm-9 col-md-6 col-lg-5 mx-auto py-4">
    <form asp-controller="Roles" asp-action="EditRole" method="post">
        <header>
            <h2 class="text-center text-primary">@ViewData["Title"]</h2>
            <h6>Id: @Model.Id</h6>
            <hr />
        </header>
        <div class="form-group d-none">
            <label asp-for="Id"></label>
            <input asp-for="Id" contenteditable="false" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row mt-3 px-4">
            <button type="submit" class="btn btn-primary mr-2">Save changes</button>
            <a asp-action="Index" asp-controller="Roles" class="btn btn-outline-danger">Discard changes</a>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Users</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <p>@user</p>
                    }
                }
                else
                {
                    <p class="text-muted">No users is assigned to this role</p>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageRoleUsers" 
                   asp-controller="Roles"  asp-route-roleid="@Model.Id" class="btn btn-primary mr-2">Manage users</a>
            </div>
        </div>

    </form>
</section>