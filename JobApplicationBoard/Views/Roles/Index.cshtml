@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<section class="col-10 col-sm-9 col-md-8 mx-auto py-4">
    <header>
        <h1 class="text-center text-primary">@ViewData["Title"]</h1>
        <hr />
    </header>
    @if (Model.Any())
    {
        <div class="row pt-2">
            @foreach(var role in Model)
            {
                <div class="col-11 col-md-6 col-lg-4 pr-md-3 mb-4">
                    <div class="card w-100">
                        <div class="card-header">
                            <small>ID: @role.Id</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-1">@role.Name</h5>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-sm btn-primary" 
                               asp-action="EditRole" asp-controller="Roles"
                               asp-route-id="@role.Id">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center w-100 mt-5">
            <a asp-action="CreateRole" asp-controller="Roles" class="btn btn-sm btn-outline-primary">Create a new role +</a>
        </div>
    }
    else
    {
        <p class="text-center text-muted">You haven't created any rows</p>
        <a class="text-center" asp-action="CreateRole" asp-controller="Roles">Create a new row</a>
    }
</section>