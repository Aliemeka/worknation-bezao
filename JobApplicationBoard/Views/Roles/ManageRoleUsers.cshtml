@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
    ViewData["Title"] = "Manage users";
}


<section class="col-10 col-sm-9 col-md-6 col-lg-5 mx-auto py-4">
    <form asp-controller="Roles" asp-action="ManageRoleUsers" method="post">
        <div class="card">
            <div class="card-header">
                <h3>Manage users roles</h3>
                <p class="text-muted"><small>Assign users by checking the boxes</small></p>
            </div>
            <div class="card-body">
                @for(int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check my-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsChecked" class="form-check-input"/>
                        <label class="form-check-label" asp-for="@Model[i].IsChecked">@Model[i].UserName</label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2" asp-route-roleid="@roleId">Update</button>
                <a asp-action="EditRole" asp-controller="Roles" 
                   asp-route-id="@roleId" class="btn btn-outline-danger">Discard changes</a>
            </div>
        </div>
    </form>
</section>